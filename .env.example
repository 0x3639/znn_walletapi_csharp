# Zenon Wallet API Docker Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# JWT Secret Key (REQUIRED)
# Generate using: python3 -c "import secrets; import hashlib; print(hashlib.sha256(secrets.token_bytes(32)).hexdigest())"
API_JWT_SECRET=your-secret-key-here-please-change-this

# PlasmaBot API Key (REQUIRED for Fuse/Both plasma modes)
# Contact the Zenon community to obtain an API key
API_PLASMABOT_APIKEY=your-plasmabot-api-key-here

# =============================================================================
# PORT CONFIGURATION
# =============================================================================

# HTTP port exposed on host (default: 8080)
API_HTTP_PORT=8080

# HTTPS port exposed on host (default: 8443)
API_HTTPS_PORT=8443

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# ASP.NET Core Environment (Development, Production)
ASPNETCORE_ENVIRONMENT=Production

# API URLs inside container
ASPNETCORE_URLS=http://+:80;https://+:443

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# JWT token issuer
API_JWT_VALID_ISSUER=walletapi.zenon.network

# JWT token audience
API_JWT_VALID_AUDIENCE=zenon.network

# JWT token expiration (format: days.hours:minutes:seconds)
# Leave empty for no expiration
# Examples: 1.00:00:00 (1 day), 00:30:00 (30 minutes)
API_JWT_EXPIRES_AFTER=

# =============================================================================
# ZENON NODE CONFIGURATION
# =============================================================================

# Zenon node WebSocket URL
# For local node: ws://host.docker.internal:35998
# For testnet: wss://syrius-testnet.zenon.community:443
# For mainnet: ws://your-node-url:35998
API_NODE_URL=ws://host.docker.internal:35998

# Chain ID (1 for mainnet, 3 for testnet)
API_NODE_CHAIN_ID=1

# Protocol version
API_NODE_PROTOCOL_VERSION=1

# Maximum PoW threads for plasma generation
API_NODE_MAX_POW_THREADS=5

# Plasma generation mode (PoW, Fuse, Both)
# PoW: Generate plasma using Proof of Work
# Fuse: Use PlasmaBot to fuse QSR
# Both: Try PlasmaBot first, fallback to PoW
API_NODE_PLASMA_MODE=PoW

# Minimum QSR threshold for fusion
API_NODE_MIN_QSR_THRESHOLD=100

# Fusion timeout (format: hours:minutes:seconds)
API_NODE_FUSE_TIMEOUT=00:01:00

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# Wallet file name
API_WALLET_NAME=api

# Number of failed unlock attempts before wallet erasure
# Set to empty to disable
API_WALLET_ERASE_LIMIT=3

# =============================================================================
# AUTO-RECEIVER CONFIGURATION
# =============================================================================

# Enable automatic transaction receiving
API_AUTORECEIVER_ENABLED=true

# Auto-receiver check interval (format: hours:minutes:seconds)
API_AUTORECEIVER_TIMER_INTERVAL=00:00:05

# =============================================================================
# AUTO-LOCKER CONFIGURATION
# =============================================================================

# Enable automatic wallet locking
API_AUTOLOCKER_ENABLED=true

# Time before auto-lock (format: hours:minutes:seconds)
API_AUTOLOCKER_LOCK_TIMEOUT=00:05:00

# Auto-locker check interval (format: hours:minutes:seconds)
API_AUTOLOCKER_TIMER_INTERVAL=00:00:05

# =============================================================================
# PLASMABOT CONFIGURATION
# =============================================================================

# PlasmaBot API URL
API_PLASMABOT_APIURL=https://zenonhub.io/api/utilities/plasma-bot/

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Minimum log level (Verbose, Debug, Information, Warning, Error, Fatal)
SERILOG_MINIMUM_LEVEL=Information